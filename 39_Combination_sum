class Solution {
public:
    void com(vector<vector<int>>& ans,vector<int>& candidates,vector<int> v,int t,int idx){
        if(t==0){
            ans.push_back(v);
            return;
        }
        if(t<0) return;
        for(int i=idx;i<candidates.size();i++){
            v.push_back(candidates[i]);
            com(ans,candidates,v,t-candidates[i],i);
            v.pop_back();
        }
    }
    vector<vector<int>> combinationSum(vector<int>& candidates, int target) {
        vector<vector<int>> ans;
        vector<int> v;
        com(ans,candidates,v,target,0);
        return ans;
    }
};
